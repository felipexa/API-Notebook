@model API_Locacao.Models.Devolucao

@{
    ViewData["Title"] = "Create";
}

<h4>Devolução</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoId" class="control-label">PRODUTO:</label>
                <select asp-for="ProdutoId" class ="form-control" asp-items="ViewBag.ProdutoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LocacaoId" class="control-label">ID CLIENTE:</label>
                <select asp-for="LocacaoId" class ="form-control" asp-items="ViewBag.LocacaoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="DEVOLVER" class="btn-add w-50 rounded-pill" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">VOLTAR</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
